{{#if posts.length}}
  {{#each posts as |post| }}
  <div> 
    <div>
      <h2>
        <a href="dashboard/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <span>
        Created by {{post.user.user_name}} on {{format_date post.date_created}}
      </span>
    </div>
    <p>
      {{post.content}}
    </p>
  </div>
  {{/each}}
{{/if}}